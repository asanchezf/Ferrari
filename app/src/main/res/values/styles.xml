<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ffa80000</item>
        <item name="colorPrimaryDark">#830202</item>
        <item name="colorAccent">#795548</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>

    </style>

  <!--  <item name="colorAccent">#795548</item>-->

    <!-- Estilo para la toolbar-->
    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>

    </style>

    <style name="CardViewTheme" parent="TextAppearance.AppCompat">
        <item name="android:textColorPrimary">#5d4037</item>
        <item name="android:textColorSecondary">#8d6e63</item>
    </style>

    <!-- Se utiliza en los controles InputTextLabel del alta de usuarios.-->
    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/md_disabled_hint_text</item>

        <item name="android:textColorPrimary">#5d4037</item>
        <item name="android:textColorSecondary">#8d6e63</item>
        <item name="android:textSize">17dp</item>

        <item name="colorAccent">@color/md_red_400</item>
        <item name="colorControlNormal">#8d6e63</item>
        <item name="colorControlActivated">#5d4037</item>
        <item name="android:background">@color/transparente</item>
    </style>


    <style name="CustomPopUp" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>

    </style>
    <style name="FloatingButton">
        <item name="android:background">@color/color_floating</item>
    </style>

</resources>
